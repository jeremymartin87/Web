@page "/faq"
@using Web.Models

<h1 class="faq-title">Foire Aux Questions sur les Problèmes Courants d'un PC</h1>

@foreach (var item in FAQList)
{
    <div class="faq-item" style="margin-bottom: 20px;">
        <h3 class="faq-question" @onclick="() => ToggleFAQ(item)">
            <span>@item.Question</span>
            <span class="toggle-icon">@((item.IsExpanded ? "-" : "+"))</span>
        </h3>
        <ul class="faq-answers" style='display: @(item.IsExpanded ? "block" : "none")'>
            @foreach (var answer in item.Answers)
            {
                <li>@answer</li>
            }
        </ul>
    </div>
}

<style>
    .faq-title {
        text-align: center;
        font-size: 28px;
        margin-bottom: 30px;
    }

    .faq-item {
        background-color: #f9f9f9;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .faq-question {
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
        font-size: 20px;
    }

    .toggle-icon {
        font-size: 24px;
    }

    .faq-answers {
        list-style-type: none;
        padding-left: 0;
    }


        .faq-answers li {
            margin-bottom: 8px;
        }
</style>


